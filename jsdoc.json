{
  "source": {
    "include": ["lib/index.d.ts"],
    "includePattern": ".+\\.d\\.ts$"
  },
  "plugins": [
    "plugins/markdown",
    "node_modules/clean-jsdoc-theme/plugins"
  ],
  "opts": {
    "template": "node_modules/clean-jsdoc-theme",
    "destination": "./docs/api",
    "recurse": true,
    "readme": "README.md",
    "encoding": "utf8"
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "default": {
      "outputSourceFiles": false
    }
  },
  "theme_opts": {
    "title": "lloyal.node API Reference",
    "homepageTitle": "lloyal.node",
    "theme": "dark",
    "default_theme": "dark",
    "create_style": "tree",
    "base_url": "https://lloyal-ai.github.io/lloyal.node",
    "menu": [
      {
        "title": "GitHub",
        "link": "https://github.com/lloyal-ai/lloyal.node",
        "target": "_blank"
      },
      {
        "title": "npm",
        "link": "https://www.npmjs.com/package/lloyal.node",
        "target": "_blank"
      }
    ],
    "meta": [
      {
        "name": "description",
        "content": "Node.js bindings for liblloyal - high-performance llama.cpp inference"
      },
      {
        "name": "keywords",
        "content": "llama, llama.cpp, inference, LLM, node.js, native, n-api"
      }
    ],
    "search": true,
    "footer": "lloyal.node Â© 2025 lloyal.ai | Apache-2.0 License",
    "exclude_inherited": false,
    "codepen": {
      "enable_for": []
    },
    "favicon": null
  }
}
