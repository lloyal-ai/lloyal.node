{
  "name": "@lloyal-labs/lloyal.node",
  "version": "1.6.0",
  "description": "Node.js client for liblloyal+llama.cpp",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "gypfile": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "download-models": "bash scripts/download-test-models.sh",
    "build:native": "node scripts/build.js",
    "build:ts": "tsc",
    "build": "npm run build:ts && npm run build:native",
    "build:debug": "cmake-js compile --debug",
    "rebuild": "cmake-js rebuild",
    "clean": "cmake-js clean && rm -rf build_test/ dist/",
    "version": "node scripts/sync-versions.js && git add -A",
    "docs": "npx typedoc",
    "test": "npm run test:integration",
    "test:integration": "npx tsx test/integration.ts",
    "test:examples": "npx tsx test/examples.ts",
    "sync:llama-cpp": "node scripts/sync-llama-cpp.js",
    "example": "npx tsx examples/chat/chat.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lloyal-ai/lloyal.node.git"
  },
  "keywords": [
    "llama",
    "llama.cpp",
    "liblloyal",
    "napi",
    "native",
    "inference",
    "llm"
  ],
  "author": "lloyal.ai",
  "license": "Apache-2.0",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/lloyal-ai/lloyal.node/issues"
  },
  "homepage": "https://github.com/lloyal-ai/lloyal.node#readme",
  "dependencies": {
    "@lloyal-labs/tsampler": "^0.2.0",
    "node-addon-api": "^8.5.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "cmake-js": "^8.0.0",
    "glob": "^11.0.0",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.16",
    "typedoc-rhineai-theme": "^1.2.0",
    "typescript": "^5.9.3"
  },
  "optionalDependencies": {
    "@lloyal-labs/lloyal.node-darwin-arm64": "1.6.0",
    "@lloyal-labs/lloyal.node-darwin-x64": "1.6.0",
    "@lloyal-labs/lloyal.node-linux-arm64": "1.6.0",
    "@lloyal-labs/lloyal.node-linux-arm64-cuda": "1.6.0",
    "@lloyal-labs/lloyal.node-linux-arm64-vulkan": "1.6.0",
    "@lloyal-labs/lloyal.node-linux-x64": "1.6.0",
    "@lloyal-labs/lloyal.node-linux-x64-cuda": "1.6.0",
    "@lloyal-labs/lloyal.node-linux-x64-vulkan": "1.6.0",
    "@lloyal-labs/lloyal.node-win32-arm64": "1.6.0",
    "@lloyal-labs/lloyal.node-win32-arm64-vulkan": "1.6.0",
    "@lloyal-labs/lloyal.node-win32-x64": "1.6.0",
    "@lloyal-labs/lloyal.node-win32-x64-cuda": "1.6.0",
    "@lloyal-labs/lloyal.node-win32-x64-vulkan": "1.6.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "files": [
    "dist/",
    "scripts/"
  ]
}
